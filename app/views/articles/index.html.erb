<h1 class="center">List of Articles</h1>

<% @articles.each do |article| %>
    <div class="jumbotron">
      <div class="article-title">
        <%= link_to article.title, article_path(article) %>
      </div>
      <div class="article-body">
        <%= truncate(article.description,length: 100)  %>
        <hr>
      </div>
      <div class="article-actions">
        <%= link_to "Edit article", edit_article_path(article),class: "btn btn-sm btn-success" %>
        <%= link_to "Delete article", article_path(article),class: "btn btn-sm btn-danger",method: :delete, data: {confirm: 'EstÃ¡s seguro?'} %>
        <%= link_to "Show article", article_path(article), class: "btn btn-sm btn-info" %>
      </div>
      </div>
  <% end %>
  </div>
